
//Opening Header
.jumbotron.blue.text-white
  .row
    .col-sm-6
      h1 Unlock your Coopotential!
      h3 Präsentiert eure Projekte und Ideen
      h3 Startups & Firmen: Findet Gleichgesinnte und Partner
    .col-sm-3.col-sm-offset-2.well.blue(ng-hide="home.isAuthenticated")
      form(role="register" name="regForm", novalidate)
        .form-group
          input#reg_input_fullname.form-control(name="full_name", type="text", ng-model="home.form.name", required, placeholder="Vor- & Nachname")
        .form-group
          input#reg_input_email.form-control(name="email", type="email", ng-model="home.form.email", required, placeholder="Email")
        .form-group
          input#reg_input_password.form-control(name="password", type="password" ng-minlength="8",
            ng-model="home.form.password", required, maxlength="30", placeholder="Passwort")
          input#reg_input_password_confirmation.form-control(name="password_confirmation", type="password" ng-minlength="8",
            ng-model="home.form.password_confirmation", required, maxlength="30", placeholder="Passwort bestätigen")
        button#reg_button.btn.btn-info(ng-click="home.register()", ng-disabled="regForm.$pristine || regForm.$invalid || home.form.password != home.form.password_confirmation", data-dismiss="modal") Jetzt Registrieren
    br(clear="all")
.container(tooltips)
  h2.text-center.text-red
    p Meistgenutzte Themen
  .container.well.grey
    //Popular Communities
    .row.display-flex
      .col-sm-2.container.well.clickable(ui-sref="root.community({id: {{community.id}}})", ng-repeat="community in home.most_used" style="border-color: #cccccc;")
        .container-fluid.text-center
          img.white(ng-src='{{community.icon}}')
          b.text-red {{community.name}}
      br(clear="all")
  h2.text-center.text-red
    p Beliebteste Projekte
  .container
    .col-sm-3.container.well(ng-repeat="project in home.featured" ng-class="{'col-sm-offset-1': $index}", style="border-color: #cccccc;")
      .container-fluid.clickable.text-center(ui-sref="root.project({id: {{project.id}}})" data-toggle="tooltip" data-placement="bottom" title="{{project.goal}}" class="project-tooltip")
        img(ng-src='{{project.image.url}}', ng-hide='!project.image')
        hr
        b.text-red {{project.name}}
    br(clear="all")

  .row
    //Artikel
    .col-sm-3.well.white
      img(src="assets/images/gvlogo.jpg")
      h3.text-center.text-red Artikel 1
      h5 Description of Artikel 1
    .col-sm-3.col-sm-offset-1.well.white
      img(src="assets/images/gvlogo.jpg")
      h3.text-center.text-red Artikel 2
      h5 Description of Artikel 2
    .col-sm-3.col-sm-offset-1.well.white
      img(src="assets/images/gvlogo.jpg")
      h3.text-center.text-red Artikel 3
      h5 Description of Artikel 3
  div
