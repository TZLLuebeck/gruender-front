nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#gv-navbar-collapse")
        span.sr-only Navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref="root.home")
        img.brand-image(src="/assets/images/gvlogo.jpg")
    .collapse.navbar-collapse#gv-navbar-collapse(style="margin-right: 5px;")
      ul.nav.navbar-nav.navbar-right
        li(ng-hide='nav.isAuthenticated')
          a.clickable(data-toggle="modal", data-target="#login_modal") Anmelden
        li.dropdown(ng-show="nav.isAuthenticated")
          a.dropdown-toggle.clickable(data-toggle="dropdown", role="button") 
            b {{nav.username}}
          ul.dropdown-menu
            li
              a(ui-sref="root.profile") Accountdaten
            li
              a#navbar_a_logout.text-white.clickable(ng-click="nav.logout()") Abmelden
      ul.nav.navbar-nav
        li.dropdown(ng-show="nav.isAuthenticated")
          a.dropdown-toggle(ng-show="nav.admin" href="#", data-toggle="dropdown", role="button") Administration
          ul.dropdown-menu
            li
              a(ui-sref="root.admin.admin_users") Nutzer
            li
              a(ui-sref="root.admin.admin_projects") Projekte
            li
              a(ui-sref="root.admin.admin_communities") Communities
            li
              a(ui-sref="root.admin.reports")
        li.clickable(ui-sref="root.communityoverview") 
          a.text-blue Communities
        li.clickable(ui-sref="root.createproject") 
          a.text-blue Projekte

.modal.fade#login_modal
  .modal-dialog
    .modal-content
      .modal-body
        .container-fluid
          center.text-blue
            b Melden Sie sich hier an:
          form(role="login" name="loginForm", novalidate)
            .form-group
              input#login_input_email.form-control(name="username", type="text" ng-minlength="2", ng-model="nav.form.username", required, maxlength="30", placeholder="Accountname")
            .form-group
              input#login_input_password.form-control(name="password", type="password" ng-minlength="8",
                ng-model="nav.form.password", required, maxlength="30", placeholder="Passwort")
            .col-4-offset-4
              button#login_button_login.btn.btn-info(type="submit" ng-click="nav.login()", ng-disabled="loginForm.$invalid", data-dismiss="modal") Anmelden
          hr
          .col-4-offset-4
            center.text-blue
              b Oder registrieren sie sich hier:
              br(clear="all")
              button.btn.btn-large.red.text-white(ui-sref='root.register', data-dismiss="modal") Neuen Account Anlegen
              br
              h5.text-red.clickable(ui-sref="forgot_password", data-dismiss="modal") Passwort vergessen?
      .modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") Schlie√üen